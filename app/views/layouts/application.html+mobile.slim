= content_for :head do
  scss:
    body {
      overflow: hidden;
      background: #744a71;
    }

    .page {
      height: 100vh;
      font-size: 16px;
    }

    a {
      text-decoration: none;
    }

    .social-icons {
      padding-top: 35px;
      a {
        display: inline-block;
        padding: 10px;
      }
    }

    nav {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: #123;
      font-size: 0;
      a {
        display: inline-block;
        width: 25%;
        padding: 10px 0;
        font-size: 1rem;
        box-sizing: border-box;
        text-align: center;
      }

      svg.icon path {
        fill: white;
      }
    }

    .logo {
      width: 100%;
      max-height: 40vh;
      margin-top: 10px;
    }

doctype 5
html
  = render 'layouts/head', type: :mobile, media: :none
  body
    main= yield
    nav
      a href='home'
        = svg(:home, :xl)
      a href='about'
        = svg(:info, :xl)
      a href='services'
        = svg(:cogs, :xl)
      a href='team'
        = svg(:group, :xl)
    = stylesheet_link_tag :mobile, media: :all, async: true
    = javascript_include_tag :mobile, async: true
