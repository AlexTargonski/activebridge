= content_for :head do
  scss:
    body {
      overflow: hidden;
      background: #433B43;
      color: white;
      text-align: center;
    }

    section {
      padding-bottom: 60px;
    }

    main {
      position: relative;
      z-index: 100;
    }

    .page {
      height: 100vh;
      font-size: 16px;
    }

    a {
      text-decoration: none;
    }

    .social-icons {
      width: 80%;
      margin: 0 auto;
      padding-top: 35px;
      text-align: center;
      a {
        display: inline-block;
        padding: 10px;
        width: 16%;
        svg path {
          fill: white;
        }
      }
    }

    nav {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: white;
      font-size: 0;
      z-index: 1000;
      a {
        display: inline-block;
        width: 25%;
        padding: 10px 0;
        font-size: 1rem;
        box-sizing: border-box;
        text-align: center;
      }
    }

    .logo {
      width: 80%;
      margin-top: 40px;
    }

    .bg {
      position: absolute;
      bottom: 0;
      left: -85%;
      max-height: 100vh;
      padding-bottom: 50px;
      width: 200%;
      transition: transform .1s;

      g {
        stroke: #504850 !important;
      }
    }

    mark, .mark {
      background: transparent;
      color: #B868A0;
    }

doctype 5
html
  = render 'layouts/head', type: :mobile, media: :none
  body
    = inline_svg 'mobile/pattern.svg', class: :bg, id: :bg
    main#pages= yield
    nav
      a href='home'= inline_svg('mobile/icons/menu-home', class: :xl)
      a href='about'= inline_svg('mobile/icons/menu-about', class: :xl)
      a href='services'= inline_svg('mobile/icons/menu-services', class: :xl)
      a href='team'= inline_svg('mobile/icons/menu-contacts', class: :xl)
    = stylesheet_link_tag :mobile, media: :all, async: true
    = javascript_include_tag :mobile, async: true
