input id='hide-all' type='radio' name='active-section' hidden='hidden'
label.project-open for='hide-all'
  div itemscope="" itemtype="http://schema.org/Product" /
  h1.title.portfolio= t('portfolio.title')
  .content.projects
    .content-wrapper data-step=1 data-tf=0
      - @projects.each_with_index do |project, i|

        input id="project-#{project.id}" type='radio' name='active-section' hidden='hidden' data-previous="project-#{@projects[i-1]&.id}" data-next="project-#{@projects[i+1 == @projects.size ? 0 : i+1]&.id}"
        .background-wrapper style="background-image: url(#{project.image.url})"
        section.project-wrapper.about tabindex="#{i}" class="for-#{i}"
          label.project-open for="project-#{project.id}"
            .content.project
              = image_tag(project.logo.url(:logo))
              .project-description
                = project.description
              .project-info
                - t('portfolio.project_info').each do |key, value|
                  .info-section
                    .item-title= value
                    .item-description= project.send(key)
              .project-link.text-center= link_to project.link, target: '_blank', class: 'view-project' do
                | View Project
                i.icon.icon-arrow-right

          .arrows
            label for="project-#{@projects[i-1]&.id}"
              i.arrow#left= svg('chevron-left', :xl)
            label for="project-#{@projects[i+1 == @projects.size ? 0 : i+1]&.id}"
              i.arrow#right= svg('chevron-right', :xl)
